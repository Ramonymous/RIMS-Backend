# Environment
ENVIRONMENT=development
DEBUG=true

# App Info
APP_NAME=ProjectRIMS API
APP_VERSION=0.1.0

# Server
HOST=0.0.0.0
PORT=8000

# Database
DATABASE_URL=postgresql+asyncpg://postgres:your-database-password@localhost:5432/project_rims

# Security
SECRET_KEY=CHANGE-THIS-TO-SECURE-RANDOM-KEY
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# CORS
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:8080

# Domains
API_DOMAIN=localhost
FRONTEND_DOMAIN=localhost

# Timezone
TIMEZONE=Asia/Jakarta

# Cloudflare
CLOUDFLARE_ENABLED=false
VALIDATE_CLOUDFLARE_IP=false

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=200
RATE_LIMIT_PER_SECOND=50
RATE_LIMIT_AUTH_PER_MINUTE=20

# Logging
LOG_LEVEL=DEBUG

# Refresh Token
REFRESH_SECRET_KEY=CHANGE-THIS-TO-SECURE-REFRESH-KEY
REFRESH_TOKEN_EXPIRE_MINUTES=43200
