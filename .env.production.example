# Environment
ENVIRONMENT=production
DEBUG=false

# App Info
APP_NAME=ProjectRIMS API
APP_VERSION=0.1.0

# Server
HOST=0.0.0.0
PORT=8000

# Database
DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/projectrims

# Security
SECRET_KEY=CHANGE-THIS-TO-SECURE-RANDOM-KEY-MIN-32-CHARS
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# CORS
ALLOWED_ORIGINS=https://rims.r-dev.asia

# Domains
API_DOMAIN=api.r-dev.asia
FRONTEND_DOMAIN=rims.r-dev.asia

# Timezone
TIMEZONE=Asia/Jakarta

# Cloudflare
CLOUDFLARE_ENABLED=true
VALIDATE_CLOUDFLARE_IP=true

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=120
RATE_LIMIT_PER_SECOND=20
RATE_LIMIT_AUTH_PER_MINUTE=10

# Logging
LOG_LEVEL=INFO

# Refresh Token
REFRESH_SECRET_KEY=CHANGE-THIS-TO-SECURE-REFRESH-KEY
REFRESH_TOKEN_EXPIRE_MINUTES=43200